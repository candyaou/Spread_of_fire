       // this.setBurnTree(Integer.parseInt(txt5.getText())); 
         
         
        FireView view = new FireView();
        
        
        
        
        
        FireModel model = new FireModel(view,size,burnTree,probTree);
        //model.solve();
        
        
        sb.setSize(1000,1000);
        sb.setVisible(true);
        model.GameTimer(time);
    }                                        

